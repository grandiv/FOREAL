<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:background="@drawable/edittext_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="388dp"
        android:layout_height="323dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo3" />

    <Button
        android:id="@+id/donationButton"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageView"
        android:layout_marginTop="20dp"
        android:text="@string/donation_page"
        android:backgroundTint="#2FB1C1"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/requestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/donationButton"
        android:layout_marginTop="16dp"
        android:text="@string/recipient_page"
        android:backgroundTint="#2FB1C1"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/volunteerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/requestButton"
        android:layout_marginTop="16dp"
        android:text="@string/volunteer_page"
        android:backgroundTint="#2FB1C1"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp"
        android:text="logout"
        android:background="#2FB1C1"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>